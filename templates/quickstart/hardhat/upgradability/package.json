    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "5.3.0",
    "@openzeppelin/upgrades-core": "^1.44.0",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "chai": "^5.2.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.0",
    "hardhat": "^2.24.0",
    "mocha": "^11.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "zksync-ethers": "^6.17.0"
