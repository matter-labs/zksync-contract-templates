  "license": "MIT",
  "repository": "https://github.com/matter-labs/zksync-hardhat-template.git",
  "scripts": {
    "deploy:transparent-proxy": "hardhat run ./deploy/deployTransparentProxy.ts",
    "upgrade:transparent-proxy": "hardhat run ./deploy/upgrade-scripts/upgradeCrowdfundingCampaign.ts",
    "deploy:uups-proxy": "hardhat run ./deploy/deployUUPS.ts",
    "upgrade:uups-proxy": "hardhat run ./deploy/upgrade-scripts/upgradeUUPSCrowdfundingCampaign.ts",
